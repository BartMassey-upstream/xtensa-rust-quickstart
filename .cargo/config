
# build core for the xtensa target
[unstable]
build-std = ["core"]

[target.xtensa-esp32-none-elf]
runner = "xtensa-esp32-elf-gdb -q -x openocd.gdb"


rustflags = [
  # use the xtensa gnu linker
  "-C", "link-arg=-Tlink.x",
  
  # if you need to link to pre-compiled C libraries provided by a C toolchain
  # use GCC as the linker by commenting out both lines above and then
  # uncommenting the three lines below
  # "-C", "linker=xtensa-esp32-elf-gcc",
  # "-C", "link-arg=-Wl,-Tlink.x",
  # "-C", "link-arg=-nostartfiles",
]

[build]
target = "xtensa-esp32-none-elf" # esp32
# target = "xtensa-esp32-none-elf" # esp8266
# target = "xtensa-esp32-none-elf" # generic xtensa target
